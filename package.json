{
  "name": "weather-app",
  "version": "1.0.0",
  "description": "A responsive weather application using HTML, Tailwind CSS, and JavaScript. Users can search for current weather and a 5-day forecast using OpenWeatherMap API.",
  "main": "index.html",
  "scripts": {
    "build": "npx tailwindcss -i ./src/input.css -o ./src/css/output.css --minify",
    "watch": "npx tailwindcss -i ./src/input.css -o ./src/css/output.css --watch",
    "start": "live-server"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sharmaHarshit2000/Weather-App.git"
  },
  "keywords": ["weather", "tailwind", "javascript", "api", "responsive"],
  "author": "Harshit Sharma",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sharmaHarshit2000/Weather-App/issues"
  },
  "homepage": "https://sharmaharshit2000.github.io/Weather-App/",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "tailwindcss": "^4.1.11",
    "live-server": "^1.2.2"
  }
}
